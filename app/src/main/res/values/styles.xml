<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">#00FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextViewFABTitle">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/ic_fab_text_square</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/cagliostro</item>
    </style>

    <style name="TextViewGeneral">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextViewGeneralBold" parent="TextViewGeneral">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewGeneralBlack" parent="TextViewGeneral">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewGeneralGreen" parent="TextViewGeneral">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="TextViewDot" parent="TextViewGeneral">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
