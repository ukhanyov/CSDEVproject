<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/green" />
            <gradient android:angle="-90" android:startColor="@color/fui_transparent" android:endColor="@color/fui_transparent"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="@color/fui_transparent" />
            <solid android:color="@color/fui_transparent"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/green" />
            <gradient android:angle="-90" android:startColor="@color/fui_transparent" android:endColor="@color/fui_transparent" />
        </shape>
    </item>

</selector>