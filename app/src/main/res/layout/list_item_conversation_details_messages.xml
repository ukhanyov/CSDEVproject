<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/list_item_tv_c_d_message_profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="@string/hint_name_name"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_item_iv_c_d_message_profile_picture"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/list_item_iv_c_d_message_profile_picture"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/chat_profile_image"
        android:src="@drawable/ic_profile_default"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_tv_c_d_message_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/list_item_tv_c_d_message_text"
        style="@style/TextViewGeneralBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_bubble_conversation_details"
        android:gravity="start"
        android:hint="@string/hint_test"
        android:padding="4dp"
        android:singleLine="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_item_iv_c_d_message_profile_picture"
        app:layout_constraintTop_toBottomOf="@+id/list_item_tv_c_d_message_profile_name" />

</android.support.constraint.ConstraintLayout>